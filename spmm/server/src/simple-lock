// vim:set ft=cpp:

#pragma once

#include <mutex>

#include "lock"

namespace Spmm
{

class SimpleLock : public Lock
{
private:
  std::mutex _m;
public:
  void lock_p([[maybe_unused]] page_t p) override { _m.lock(); }
  void unlock_p([[maybe_unused]] page_t p) override { _m.unlock(); }
};

} //Spmm
