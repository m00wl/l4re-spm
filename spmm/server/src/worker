#pragma once

#include <l4/sys/types.h>

#include "mediator"

namespace Spmm
{

class Worker : public Component
{
public:
  virtual ~Worker() {};

  virtual void run(void) = 0;
  virtual void pinc_refcnt(l4_addr_t p) = 0;
  virtual void pdec_refcnt(l4_addr_t p) = 0;
};

} //Spmm
